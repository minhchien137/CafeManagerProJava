<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:padding="@dimen/define_dimen_20"
    tools:ignore="ContentDescription, UseCompatTextViewDrawableXml, UnusedAttribute" >

    <ImageView
        android:layout_width="@dimen/define_dimen_60"
        android:layout_height="@dimen/define_dimen_60"
        android:src="@drawable/ic_avatar_default" />

    <TextView
        android:id="@+id/tv_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_size_normal"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/define_dimen_5"
        android:textColor="@color/colorPrimaryDark"
        android:text="@string/app_name"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/define_dimen_20"
        android:layout_marginBottom="@dimen/define_dimen_20"
        android:background="@color/colorPrimary"/>

    <!-- TextView cho thông báo với số lượng -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_manage_notification"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/define_dimen_14"
            android:paddingBottom="@dimen/define_dimen_14"
            android:text="@string/manage_notification"
            android:drawableTint="@color/colorPrimaryDark"
            android:textColor="@color/colorPrimaryDark"
            android:drawableStart="@drawable/ic_notification"
            android:drawablePadding="@dimen/define_dimen_10"
            android:textSize="@dimen/text_size_small"/>

        <!-- Số lượng thông báo, sẽ hiển thị trên chuông -->
        <TextView
            android:id="@+id/tv_notification_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="13dp"
            android:layout_marginEnd="30dp"
            android:background="@drawable/notification_count_background"
            android:text="5"
            android:textColor="@android:color/white"
            android:textSize="12sp"
            android:padding="5dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_manage_topping"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/define_dimen_14"
        android:paddingBottom="@dimen/define_dimen_14"
        android:text="@string/manage_topping"
        android:drawableTint="@color/colorPrimaryDark"
        android:textColor="@color/colorPrimaryDark"
        android:drawableStart="@drawable/ic_topping"
        android:drawablePadding="@dimen/define_dimen_10"
        android:textSize="@dimen/text_size_small" />

    <TextView
        android:id="@+id/tv_manage_voucher"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/define_dimen_14"
        android:paddingBottom="@dimen/define_dimen_14"
        android:text="@string/manage_voucher"
        android:drawableTint="@color/colorPrimaryDark"
        android:textColor="@color/colorPrimaryDark"
        android:drawableStart="@drawable/ic_voucher"
        android:drawablePadding="@dimen/define_dimen_10"
        android:textSize="@dimen/text_size_small" />


    <TextView
        android:id="@+id/tv_manage_feedback"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/define_dimen_14"
        android:paddingBottom="@dimen/define_dimen_14"
        android:text="@string/manage_feedback"
        android:drawableTint="@color/colorPrimaryDark"
        android:textColor="@color/colorPrimaryDark"
        android:drawableStart="@drawable/ic_feedback"
        android:drawablePadding="@dimen/define_dimen_10"
        android:textSize="@dimen/text_size_small" />

    <TextView
        android:id="@+id/tv_sign_out"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/define_dimen_14"
        android:paddingBottom="@dimen/define_dimen_14"
        android:text="@string/sign_out"
        android:drawableTint="@color/colorPrimaryDark"
        android:textColor="@color/colorPrimaryDark"
        android:drawableStart="@drawable/ic_sign_out"
        android:drawablePadding="@dimen/define_dimen_10"
        android:textSize="@dimen/text_size_small" />
</LinearLayout>